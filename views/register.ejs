
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-lg-5 m-auto">
            <div class="card mt-4">
                <div class="card-body">
                    <h2>Register</h2>
                    <%- include('./partials/alert') %>
                    <form action="/user/register" method="post">
                        <div class="form-group my-1">
                            <label for="username">Names</label>
                            <input type="text" class="form-control" name="username" placeholder="Enter your name"
                                value="<%= typeof username != 'undefined'? username : "" %>">
                        </div>
                        <div class="form-group my-1">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" placeholder="Enter your email"
                                value="<%= typeof email != 'undefined'? email : "" %>">
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group my-1">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" placeholder="Enter your password"
                                value="<%= typeof password != 'undefined'? password : "" %>">
                        </div>
                        <div class="form-group my-1">
                            <label for="password2">Confirm Password</label>
                            <input type="password" class="form-control" name="password2" placeholder="Confirm your password"
                                value="<%= typeof password2 != 'undefined'? password2 : "" %>">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </form>
                    <p class="lead my-2">Have an account? <a href="/user/login">Login</a></p>
                </div>
            </div>
        </div>
    </div>
</div>


